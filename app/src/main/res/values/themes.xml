<resources xmlns:tools="http://schemas.android.com/tools">





    <style name="Base.Theme.ECommerce" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:colorAccent">@color/primary_color</item>
        <item name="android:colorPrimaryDark">@color/primary_color</item>

        <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>  <!-- For making Navigation bar content color dark -->

    </style>

    <style name="Theme.ECommerce" parent="Base.Theme.ECommerce" >

    <!-- <style name="Theme.MainActivity" parent="Base.Theme.ECommerce"> -->
         <item name="android:windowBackground">@drawable/lanch_window_background</item>

         <!-- System UI Configurations-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item> <!-- For making status bar content color dark -->
        <item name="android:navigationBarColor">@color/primary_color</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>  <!-- For making Navigation bar content color dark -->
    </style>




    <style name="textTheme">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/filledBlack</item>
    </style>

    <style name="bigTextTheme" parent="textTheme">
        <item name="android:textSize">17sp</item>
    </style>

</resources>